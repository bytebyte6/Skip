<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/ListItemSubTitleStyle"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_name" />

        <TextView
            style="@style/ListItemBodyStyle"
            android:id="@+id/tvTrainingWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/way_by_time" />

        <TextView
            style="@style/ListItemBodyStyle"
            android:id="@+id/tvMinDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_min_s" />

        <TextView
            style="@style/ListItemBodyStyle"
            android:id="@+id/tvMaxDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_max_s" />

        <TextView
            style="@style/ListItemBodyStyle"
            android:id="@+id/tvRestDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest_duration_s" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>