<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_name" />

        <TextView
            android:id="@+id/tvTrainingWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/way_by_group" />

        <TextView
            android:id="@+id/tvMinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min_count_d" />

        <TextView
            android:id="@+id/tvMaxCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_count_d" />

        <TextView
            android:id="@+id/tvMinGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min_group_d" />

        <TextView
            android:id="@+id/tvMaxGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_group_d" />

        <TextView
            android:id="@+id/tvRestDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest_duration_s" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>