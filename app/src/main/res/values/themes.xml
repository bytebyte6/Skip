<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skip" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:windowBackground">@color/white_f2f2f2</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:textAppearance">?textAppearanceListItem</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemBodyStyle" parent="TextAppearance.MaterialComponents.Caption">

    </style>

    <style name="ListItemSubTitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>
</resources>